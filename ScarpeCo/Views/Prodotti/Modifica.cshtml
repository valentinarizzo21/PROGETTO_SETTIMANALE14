@model Prodotto

@{
    ViewData["Title"] = "Modifica Prodotto";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Modifica Prodotto</h2>

    <form method="post" action="/Prodotti/SalvaModifica">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" name="Nome" value="@Model.Nome" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Prezzo (€)</label>
            <input type="number" step="0.01" class="form-control" name="Prezzo" value="@Model.Prezzo" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Descrizione</label>
            <textarea class="form-control" name="Descrizione" required>@Model.Descrizione</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Immagine di Copertina (URL)</label>
            <input type="text" class="form-control" name="ImmagineCopertina" value="@Model.ImmagineCopertina" required />
        </div>

        <button type="submit" class="btn btn-success">Salva Modifica</button>
        <a href="/Prodotti/Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>